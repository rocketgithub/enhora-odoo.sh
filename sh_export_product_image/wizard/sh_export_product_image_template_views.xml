<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- PRODUCT.TEMPLATE  WIZARD AND MULTI ACTIONS -->
    <record id="sh_export_product_image_product_tmpl_wizard_form" model="ir.ui.view">
        <field name="name">sh.export.product.image.product.tmpl.wizard.form</field>
        <field name="model">sh.export.product.image.tmpl</field>
        <field name="arch" type="xml">
            <form string="Export Product Images">
                <group>
                    <group>
                        <field name="file_name" />
                        <field name="file" readonly="1" filename="zip_file_name" />
                        <field name="zip_file_name" invisible="1" />
                    </group>

                    <field name="product_tmpl_ids" attrs="{'invisible': [('file', '!=', False)]}" readonly="True"/>
                </group>

                <footer>
                    <button name="action_export" string="Export" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_export_product_image_product_tmpl_action" model="ir.actions.act_window">
        <field name="name">Export Images</field>
        <field name="res_model">sh.export.product.image.tmpl</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_export_product_image_product_tmpl_wizard_form" />
        <field name="target">new</field>
        <field name="groups_id" eval="[(4,ref('sh_export_product_image.sh_export_product_image_group'))]" />
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
